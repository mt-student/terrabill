<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_dashboard">

    <fragment
        android:id="@+id/navigation_requests"
        android:name="com.example.terrabill.ui.requests.RequestsFragment"
        android:label="@string/title_requests"
        tools:layout="@layout/fragment_requests" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.terrabill.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboardFragment_to_timeTrackingFragment"
            app:destination="@id/navigation_timetracking" />
    </fragment>

    <fragment
        android:id="@+id/navigation_customers"
        android:name="com.example.terrabill.ui.customers.CustomersFragment"
        android:label="@string/title_customers"
        tools:layout="@layout/fragment_customers" />

    <fragment
        android:id="@+id/navigation_invoices"
        android:name="com.example.terrabill.ui.invoices.InvoicesFragment"
        android:label="@string/title_invoices"
        tools:layout="@layout/fragment_invoices" >
    </fragment>

    <fragment
        android:id="@+id/navigation_timetracking"
        android:name="com.example.terrabill.ui.timetracking.TimeTrackingFragment"
        android:label="Zeiterfassung"
        tools:layout="@layout/fragment_time_tracking">
        <action
            android:id="@+id/action_timeTrackingFragment_to_invoiceFragment"
            app:destination="@id/navigation_invoices" />
    </fragment>
</navigation>